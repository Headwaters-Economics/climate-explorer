    <div id="location-viewport" class="padding-horrizontal d-flex d-flex-column">

      <div id="search-row" class="padding-horizontal d-flex-row flex-justify padding-top padding-bottom-half d-flex-justify" >

        <div class="rounded-box-secondary input-outer padding-horrizontal bottom-padding default-btn-height search-box-secondary width-50">
          <input id="cards-search-input" type="text" class="location-mapper input-inner-default border-none default-btn-height width-90" autocomplete="off" placeholder="Enter county, city, or zip code">
          <span class="icon icon-search search-default float-right padding-default"></span>
        </div>

        <div id="stations-select-wrapper" class="rounded-choice-box padding-horrizontal default-btn-height d-flex-center width-20">
          <select id="stations-select" class="default-select disabled border-none  d-flex-center width-90" >
              <option class="default-select-option" value="none">Stations</option>
              <option class="default-select-option" value="station-1">Station 1</option>
              <option class="default-select-option" value="station-2">Station 2</option>
              <option class="default-select-option" value="station-3">Station 3</option>
              <option class="default-select-option" value="station-4">Station 4</option>
          </select>
          <!-- <span class="icon icon-search search-default float-right padding-default"></span> -->
        </div>

        <div id="downloads-select-wrapper" class="rounded-choice-box padding-horrizontal default-btn-height d-flex-center width-20">
          <!-- <button id="downnloads-button" class="border-none default-btn-inner-height width-90"  ></button> -->
          <select id="downnloads-select" class="default-select border-none d-flex-center width-90" icon="fas fa-download select-icon">
              <option class="default-select-option" value="none" icon="fas fa-download select-icon" >Downloads</option>
              <option class="default-select-option" value="download-image" icon="fas fa-download select-icon" >Download image</option>
              <option class="default-select-option" value="download-data" icon="fas fa-download select-icon" >Download data</option>
          </select>
          <!-- <span class="icon icon-search search-default float-right padding-default"></span> -->
        </div>



      </div>

      <div id="info-row" class="d-flex-row flex-justify padding-top-half padding-bottom-half d-flex-center" >
        <div class="rounded-filters-box padding-default width-100">
          <i class="fas fa-chart-line icon-info-box"></i>
          <span id="default-city-state" class="text-info-box" ></span>
          <span id="" class="text-info-box" > in </span>
          <span id="default-city-county" class="text-info-box"></span>
          <span id="" class="text-info-box" > - </span>
          <span id="default-chart-map-varriable" class="text-info-box">Annual average daily maximum temperature (°F) </span>
          <!-- <div id="default-chart-map-discuss" class="text-info-box-secondary padding-top-half">Graphs and maps below show observed and modeled data for the county of your selected location.</div> -->

          <div id="filters-row" class="d-flex-row flex-justify padding-top padding-bottom d-flex-left" >

            <div id="varriable-select-wrapper" class="rounded-choice-box padding-horrizontal-half padding-vertical-half default-btn-height d-flex-center width-30">
              <select id="varriable-select" class="default-select border-none  d-flex-center width-90" >
                  <option class="default-select-option-group" value="none" icon="fas fa-temperature-high select-icon">Temperature</option>
                  <option class="default-select-option" value="avg-max">Avg Daily Max Temp (°F)</option>
                  <option class="default-select-option" value="avg-min">Avg Daily Min Temp (°F)</option>
                  <option class="default-select-option" value="max-gt-90">Days w/ max > 90°F</option>
                  <option class="default-select-option" value="max-gt-95">Days w/ max > 95°F</option>
                  <option class="default-select-option" value="max-gt-100">Days w/ max > 100°F</option>
                  <option class="default-select-option" value="max-gt-90">Days w/ max > 105°F</option>
                  <option class="default-select-option" value="max-lt-32">Days w/ max < 32°F</option>
                  <option class="default-select-option" value="min-lt-32">Days w/ min > 32°F</option>
                  <option class="default-select-option" value="min-gt-80">Days w/ min > 80°F</option>
                  <option class="default-select-option" value="min-gt-90">Days w/ min > 90°F</option>
                  <option class="default-select-option-group" value="none" icon="fas fa-cloud-rain select-icon">Precipitation</option>
                  <option class="default-select-option" value="total-precip">Total precipitation</option>
                  <option class="default-select-option" value="gt-1inch">Days w/ > 1 in Precipitation</option>
                  <option class="default-select-option" value="gt-3inch">Days w/ > 3 in Precipitation</option>
                  <option class="default-select-option" value="Dry-Days">Dry Days</option>
                  <option class="default-select-option-group" value="none" icon="fas fa-bacon select-icon">Other</option>
                  <option class="default-select-option" value="Dry-Days">Cooling Degree Days</option>
                  <option class="default-select-option" value="growing-degree-days">Growing Degree Days</option>
                  <option class="default-select-option" value="heating-degree-days">Heating Degree Days</option>
                  <option class="default-select-option" value="mo-growing-degree-days">Mod. Growing Degree Days</option>
              </select>
            </div>


            <div id="chartmap-wrapper" class="padding-horrizontal-half padding-vertical-half default-btn-height d-flex-center width-20">
              <div id="btn-chart" class="btn-default-selected circle-box-left d-flex-center width-50" >
                Chart
              </div>
              <div id="btn-chart" class="btn-default circle-box-right d-flex-center width-50" >
                Map
              </div>
            </div>

            <div id="time-wrapper" class="padding-horrizontal-half padding-vertical-half default-btn-height d-flex-center width-20">
              <div id="btn-chart" class="btn-default-selected circle-box-left d-flex-center width-50" >
                Annual
              </div>
              <div id="btn-chart" class="btn-default circle-box-right d-flex-center width-50" >
                Monthly
              </div>
            </div>

            <div id="type-wrapper" class="padding-horrizontal-half padding-vertical-half default-btn-height d-flex-center width-20">
              <div id="btn-chart" class="btn-default-selected circle-box-left d-flex-center width-50" >
                Actual
              </div>
              <div id="btn-chart" class="btn-default circle-box-right d-flex-center width-50" >
                Anomaly
              </div>
            </div>

          </div>
        </div>
      </div>


      <div id="chart-row" class="padding-horizontal padding-top-half padding-bottom-half d-flex-row flex-justify" >
      </div>


    </div>

{{> nav_footer }}
